            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "Run Cube Program",
            "type": "shell",
            "command": "${fileDirname}\\${fileBasenameNoExtension}.exe",
            "args": [
                "simulated annealing"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": "C/C++: g++.exe build active file",
            "problemMatcher": []
        },
    ],
}